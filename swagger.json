{
  "swagger": "2.0",
  "info": {
    "title": "REST API for 'MyDiary Web App'",
    "description": "This is a web app where users can pen down their note, thoughts and ideas",
    "version": "v1"
  },
  "host": "http://127.0.0.1:8000",
  "basePath": "/api/v1",

  "paths": {
    "/auth/signup": {
      "post": {
        "summary": "Add a new user to the app", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "firstName",
            "type": "string",
            "description": "first name of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/diaryUser"
            }
          },
          {
            "in": "body",
            "name": "lastName",
            "type": "string",
            "description": "last name of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/diaryUser"
            }
          },
          {
            "in": "body",
            "name": "email",
            "type": "string",
            "description": "email of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/diaryUser"
            }
          },
          {
            "in": "body",
            "name": "password",
            "type": "string",
            "description": "password for the account",
            "required": true,
            "schema": {
              "$ref": "#/definitions/diaryUser"
            }
            
          }
        ],
        "responses": {
          "201": {
            "description": "user added successfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": 
              "required fields must be filled",
              "schema": {
                "$ref": "#/definitions/Message"
              } 
             }
        }
      }

    },

    "/auth/login": {
      "post": {
        "summary": "logs in a user into the app", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "email",
            "type": "string",
            "description": "email of the user",
            "required": true,
            "schema": {
              "$ref": "#/definitions/User"
            }
          },
          {
            "in": "body",
            "name": "password",
            "type": "string",
            "description": "password for the account",
            "required": true,
            "schema": {
              "$ref": "#/definitions/diaryUser"
            }
            
          }
        ],
        "responses": {
          "200": {
            "description": "You're welcome",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "required fields must be filled",
              "$ref": "#/definitions/Message"
          },
          "404": {
            "description": "Invalid email or password",
              "$ref": "#/definitions/Message"
          }
        }
      }

    },
    
    "/entries": {
      "post": {
        "summary": "adds a new entry", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "body",
            "name": "title",
            "type": "string",
            "description": "title of the entry",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Entry"
            }
          },
          {
            "in": "body",
            "name": "content",
            "type": "string",
            "description": "content of the entry",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Entry"
            } 
          }
        ],
        "responses": {          
          "404": {
            "description": "user cannot be found",
              "$ref": "#/definitions/Message"
          },
          "201": {
            "description": "adds a new entry sucessfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "content fields must be filled",
              "$ref": "#/definitions/Message"
          },
          "500": {
            "description": "user not registered yet",
              "$ref": "#/definitions/Message"
            }
          }
      },
      "get": {
        "summary": "returns all entries from a particular user", 
        "produces": [
          "application/json"
        ],        
        "responses": {          
          "404": {
            "description": "entries cannot be found",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "200": {
            "description": "entries found",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
      }
    }
  },

    "/entries/{entryId}": {
      "put": {
        "summary": "update an existing entry", 
        "consumes": [
          "application/json"
        ], 
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "in": "params",
            "name": "entryId",
            "type": "integer",
            "description": "id of the entry",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Entry"
            }
          },          
          {
            "in": "body",
            "name": "title",
            "type": "string",
            "description": "title of the entry",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Entry"
            }
          },
          {
            "in": "body",
            "name": "content",
            "type": "string",
            "description": "content of the entry",
            "required": false,
            "schema": {
              "$ref": "#/definitions/Entry"
            } 
          } 
        ],
        "responses": {          
          "404": {
            "description": "user cannot be found",
              "$ref": "#/definitions/Message"
          },
          "201": {
            "description": "adds a new entry sucessfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "400": {
            "description": "content fields must be filled",
              "$ref": "#/definitions/Message"
          },
          "500": {
            "description": "user not registered yet",
              "$ref": "#/definitions/Message"
            }
          }
      },
      "delete": {
        "summary": "deletes a entry", 
        "parameters": [
          {
            "in": "params",
            "name": "entryId",
            "type": "integer",
            "description": "id of the entry",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Entry"
            }
          } 
        ],
        "responses": {          
          "404": {
            "description": "entry cannot be found",
              "$ref": "#/definitions/Message"
          },
          "204": {
            "description": "entry deleted sucessfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          },
          "500": {
            "description": "entry can not be deleted",
              "$ref": "#/definitions/Message"
            }
          }
      },
      "get": {
        "summary": "returns a entry",
        "parameters": [
          {
            "in": "params",
            "name": "entryId",
            "type": "integer",
            "description": "id of the entry",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Entry"
            }
          } 
        ],         
        "responses": {          
          "404": {
            "description": "entry cannot be found",
              "$ref": "#/definitions/Message"
          },
          "200": {
            "description": "entry found sucessfully",
            "schema": {
              "$ref": "#/definitions/Message"
            }
          }
          }
      }           

    }

  },
  "definitions": {
    "diaryUser": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "A unique identifier of the user. Automatically assigned by the API when the user is created"
        },
        "firstName": {
          "type": "string",
          "description": "First name of the user"
        },
        "lastName": {
          "type": "string",
          "description": "Last name of the user"
        },
        "email": {
          "type": "string",
          "description": "email of the user"
        },
        "password": {
          "type": "string",
          "description": "password of the user"
        }                              
      }
    },
    "Entry": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "description": "A unique identifier of the user. Automatically assigned by the API when the user is created"
        },
        "diaryUserId": {
          "type": "number",
          "description": "The id of the user that created the entry"
        },        
        "title": {
          "type": "string",
          "description": "title of the entry"
        },
        "content": {
          "type": "string",
          "description": "content of the entry"
        }                                    
      }
    }   
  } 

}